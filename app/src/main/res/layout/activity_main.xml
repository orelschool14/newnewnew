<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    android:orientation="horizontal"
    android:background="@drawable/ronaldin1"


    >

    <TextView
        android:id="@+id/improve"
        android:layout_width="250dp"
        android:layout_height="78dp"
        android:text="Improve"
        android:textColor="#D2386C"
        android:textStyle="bold"
        android:textSize="70dp"
        android:fontFamily="@font/mrsmonsterital"></TextView>

    <TextView
        android:id="@+id/your"
        android:layout_width="250dp"
        android:layout_height="78dp"
        android:layout_below="@+id/improve"
        android:text="Your"
        android:textColor="#A58494"
        android:textSize="70sp"
        android:layout_marginHorizontal="70dp"
        android:textStyle="bold"

        android:fontFamily="@font/mrsmonsterital"></TextView>

    <TextView
        android:id="@+id/skills"
        android:layout_width="450dp"
        android:layout_height="78dp"
        android:layout_below="@+id/your"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="110dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/mrsmonsterital"
        android:text="Skills"
        android:textColor="#C6C5BD"
        android:textSize="70sp"
        android:textStyle="bold"></TextView>

    <Button
        android:id="@+id/play"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:text="PLAY"
        android:textColor="#000000"
        android:backgroundTint="#F7CAC9"
        android:textAllCaps="false"
        android:fontFamily="@font/mrsmonsterital"
        android:textSize="23dp"

        android:background="@drawable/buttonstyle1"


        ></Button>
    <Button
        android:id="@+id/How"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_below="@+id/play"
        android:layout_centerInParent="true"
        android:textSize="23dp"


        android:text="Settings"
        android:background="@drawable/buttonstyle1"
        android:textColor="#F7CAC9"
        android:backgroundTint="#000000"
        android:layout_marginVertical="8dp"
        android:fontFamily="@font/mrsmonsterital"></Button>

    <Button
        android:id="@+id/music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="58dp"
        android:textColor="#F7CAC9"
        android:backgroundTint="#000000"
        android:text="music" />

    <TextView
        android:id="@+id/batterylevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="51dp"
        android:textSize="25dp"></TextView>

    <DigitalClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="1dp"
        android:textSize="25dp" />


</RelativeLayout>